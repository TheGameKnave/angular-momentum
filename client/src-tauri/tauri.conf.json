{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Angular Momentum",
  "version": "0.20.1",
  "identifier": "app.angularmomentum",
  "build": {
    "beforeDevCommand": "ng serve --hmr --proxy-config src/proxy.conf.json --configuration=tauri-local",
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": "npm run build --configuration=production",
    "frontendDist": "../dist/angular-momentum/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Angular Momentum",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
