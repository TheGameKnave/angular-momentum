{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Notification Translations Schema",
  "description": "Schema for validating server-side notification translations",
  "type": "object",
  "definitions": {
    "localizedStrings": {
      "type": "object",
      "properties": {
        "en": { "type": "string", "minLength": 1 },
        "de": { "type": "string", "minLength": 1 },
        "fr": { "type": "string", "minLength": 1 },
        "es": { "type": "string", "minLength": 1 },
        "zh-CN": { "type": "string", "minLength": 1 },
        "zh-TW": { "type": "string", "minLength": 1 }
      },
      "required": ["en", "de", "fr", "es", "zh-CN", "zh-TW"],
      "additionalProperties": false
    },
    "notificationDefinition": {
      "type": "object",
      "properties": {
        "title": { "$ref": "#/definitions/localizedStrings" },
        "body": { "$ref": "#/definitions/localizedStrings" },
        "label": { "$ref": "#/definitions/localizedStrings" },
        "icon": { "type": "string" }
      },
      "required": ["title", "body", "label"],
      "additionalProperties": false
    }
  },
  "properties": {
    "welcome": { "$ref": "#/definitions/notificationDefinition" },
    "feature_update": { "$ref": "#/definitions/notificationDefinition" },
    "maintenance": { "$ref": "#/definitions/notificationDefinition" },
    "achievement": { "$ref": "#/definitions/notificationDefinition" }
  },
  "required": ["welcome", "feature_update", "maintenance", "achievement"],
  "additionalProperties": true
}
