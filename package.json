{
  "name": "angular-momentum",
  "version": "21.0.1",
  "siteUrl": "https://angularmomentum.app",
  "repository": "https://github.com/TheGameKnave/angular-momentum",
  "private": true,
  "engines": {
    "node": "24.11.1"
  },
  "scripts": {
    "client": "cd client && NODE_ENV=development npm run start -- --configuration development",
    "client:prod": "cd client && NODE_ENV=production npm run start -- --configuration production",
    "server": "cd server && NODE_ENV=development node-env-run --exec nodemon | pino-colada",
    "server:prod": "cd server && NODE_ENV=production node-env-run --exec nodemon",
    "heroku-postbuild": "cd client && npm install && npm run heroku-postbuild",
    "start": "cd server && ts-node index.ts",
    "dev": "run-p client server",
    "prod": "run-p client:prod server:prod",
    "sonar": "sonar-scanner -Dsonar.token=$(grep SONAR_TOKEN server/.env | cut -d '=' -f 2)",
    "test": "./tests/test.sh",
    "test:translation": "cd tests/translation && npx tsx translation-validation.ts",
    "test:notification": "cd tests/translation && npx tsx notification-validation.ts",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:e2e": "cd tests/e2e && node clean_screenshots && node test_runner",
    "accept": "cd tests/e2e && node accept_tests",
    "deploy:dev": "./deploy.sh dev",
    "deploy:staging": "./deploy.sh staging",
    "bump-version": "node bump_version.js",
    "deploy:production": "./deploy.sh production",
    "prepare": "npx --yes is-ci || husky || true"
  },
  "workspaces": [
    "./client",
    "./server"
  ],
  "overrides": {
    "@types/express-serve-static-core": "^5.1.0"
  },
  "devDependencies": {
    "@types/express-serve-static-core": "^5.1.0",
    "@formatjs/icu-messageformat-parser": "^2.11.4",
    "@jirutka/ajv-cli": "^6.0.0-beta.5",
    "ajv": "^8.17.1",
    "husky": "^9.1.7",
    "testcafe": "^3.6.2",
    "testcafe-angular-selectors": "^0.4.1",
    "testcafe-blink-diff": "^0.5.5",
    "typescript": "~5.9.3"
  }
}
